(ns {{top/ns}}.system
  (:require [integrant.core :as ig]
            [ring.adapter.jetty :as jetty]
            [ring.util.response :as resp]
            [{{top/ns}}.config :as config]))


(def system-config
  {:app/config {}
   :adapter/jetty {:config (ig/ref :app/config)
                   :handler (ig/ref :handler/greet)}
   :handler/greet {:name "Alice"}})

(defmethod ig/init-key :app/config [_ {:keys [path] :as opts}]
  ({{top/ns}}.config/load-config path))

(defmethod ig/init-key :adapter/jetty [_ {:keys [config handler] :as opts}]
  (jetty/run-jetty handler (-> (:server config) (assoc :join? false))))

(defmethod ig/halt-key! :adapter/jetty [_ server]
  (.stop server))

(defmethod ig/init-key :handler/greet [_ {:keys [name]}]
  (fn [_] (resp/response (str "Hello " name))))
